-- 这部分是你要放在外部链接中的代码
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local animator = humanoid:WaitForChild("Animator")

-- 获取右手部件
local rightArm = character:FindFirstChild("RightArm") or character:FindFirstChild("Right Upper Arm")
if not rightArm then
    warn("未找到右手部件")
    return
end

local originalCFrame = rightArm.CFrame

-- 创建并加载动画
local animation = Instance.new("Animation")
animation.Name = "RightArmWavingAnimation"

-- 动画数据
local animationData = {
    ["RightArm"] = {
        Type = "CFrame",
        Keyframes = {
            [0] = originalCFrame,
            [0.5] = originalCFrame * CFrame.Angles(0, 0, -math.pi / 4),
            [1] = originalCFrame * CFrame.Angles(0, math.pi / 8, -math.pi / 4),
            [1.5] = originalCFrame * CFrame.Angles(0, -math.pi / 8, -math.pi / 4),
            [2] = originalCFrame * CFrame.Angles(0, 0, -math.pi / 4),
            [2.5] = originalCFrame
        }
    }
}

-- 播放动画
local track = animator:LoadAnimation(animation)
track:Play()
return track -- 返回轨道以便控制
